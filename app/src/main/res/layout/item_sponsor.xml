<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sponsorsSummaryContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/avatar_small"
        android:layout_height="@dimen/avatar_small"
        android:layout_margin="@dimen/layout_margin_medium"
        app:cardCornerRadius="8dp">
        <ImageView
            android:id="@+id/sponsorImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@drawable/border"
            android:padding="@dimen/padding_small"
            app:srcCompat="@drawable/ic_account_circle_grey"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sponsorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:elevation="8dp"
        android:layout_gravity="center"/>

</FrameLayout>
