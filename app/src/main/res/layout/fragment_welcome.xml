<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fragment_welcome"
    tools:context=".fragments.welcome.WelcomeFragment">


    <View
        android:layout_width="394dp"
        android:layout_height="543dp"
        android:layout_marginTop="@dimen/layout_margin_extra_large"
        android:background="@drawable/welcome_img"
        app:layout_constraintBottom_toTopOf="@+id/welcomeLetsGoBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/layout_margin_large"
        android:layout_marginEnd="@dimen/layout_margin_large"
        app:layout_constraintVertical_bias="0.417" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/welcomeLetsGoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/layout_margin_large"
        android:layout_marginRight="@dimen/layout_margin_large"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/padding_medium"
        android:text="@string/welcome_button_message"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/colorPrimary" />
</androidx.constraintlayout.widget.ConstraintLayout>
